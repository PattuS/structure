@model List<Structure.Models.Client>
<table class="table table-bordered tabled-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name
                </td>
                <td>
                    <a href="/clients/@client.Id/edit">edit</a>
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "Clients", FormMethod.Post))
                    {
                        @Html.Hidden("id", client.Id)
                        <a href="#" onclick="$(this).closest('form').submit();return false;">delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pull-right">
    <a href="/clients/new" class="btn">New Client</a>
</div>
