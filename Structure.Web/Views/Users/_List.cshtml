@model List<Structure.Models.User>
<table class="table table-bordered tabled-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name
                </td>
                <td>@user.Email
                </td>
                <td>@Html.ActionLink("edit", "Edit", "User")
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                    {
                        @Html.Hidden("id", user.Id)
                        <a href="#" onclick="$(this).closest('form').submit();return false;">delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pull-right">
    <a href="/users/new" class="btn">New User</a>
</div>