@model Structure.Web.Models.Users.ChangePasswordViewModel
<div class="modal" data-controller="users" data-action="show">
    <div class="modal-header">
        <h3>Change Password</h3>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
        {
        @Html.LabelFor(x => x.OldPassword)
        @Html.PasswordFor(x => x.OldPassword)
        @Html.ValidationMessageFor(x => x.OldPassword)
        
        @Html.LabelFor(x => x.NewPassword)
        @Html.PasswordFor(x => x.NewPassword)
        @Html.ValidationMessageFor(x => x.NewPassword)

        @Html.LabelFor(x => x.NewPasswordCheck)
        @Html.PasswordFor(x => x.NewPasswordCheck)
        @Html.ValidationMessageFor(x => x.NewPasswordCheck)
        }
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Cancel</a> 
        <button type="submit" class="btn btn-primary">Change Password</button>
    </div>
</div>
